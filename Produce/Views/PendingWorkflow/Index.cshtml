@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8,IE=edge" />
    <title>@Html.Raw(Infiniti.MvcControllers.ApplicationSettings.ThemePageTitle)</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    @if (String.IsNullOrEmpty(ViewBag.Message))
    {
        <script>
            (function () {
                window.close();
            })();
        </script>
        <div>@Intelledox.Produce.Resources.Strings.DecisionAcknowledged</div>
    }
    else
    {
        <div>@ViewBag.Message</div>
    }
</body>
</html>