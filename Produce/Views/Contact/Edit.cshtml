@using Intelledox.Produce
@model ContactViewModel
@{
    ViewBag.CurrentTab = MenuTab.Contact;
    ViewBag.BackUrl = Url.Action("Index");
}
@section AddToHead
{
    <script src="~/scripts/jquery-ui-1.12.1.custom.min.js" type="text/javascript"></script>
}
@Html.Partial("_SiteHeader")
<div class="container ix-header-body">
    <h2>
        @Intelledox.Produce.Resources.Strings.Contacts
    </h2>

    @if (Request.QueryString["Saved"] == "1")
    { 
    <p class="bg-success">@Intelledox.Produce.Resources.Strings.MsgSaved</p>
    }

    <form method="post" class="form-horizontal" enctype="multipart/form-data" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="AddressId" value="@Model.Contact.AddressId" />
        <input type="hidden" name="TypeId" value="@Model.Contact.TypeId" />

        <div class="form-group">
            <label for="Prefix" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Prefix</label>
            <div class="col-sm-4">
                <input type="text" id="Prefix" name="Prefix" class="form-control" maxlength="50" value="@Model.Contact.Prefix" />
            </div>
            <label for="Title" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Title</label>
            <div class="col-sm-4">
                <input type="text" id="Title" name="Title" class="form-control" maxlength="50" value="@Model.Contact.Title" />
            </div>
        </div>
        <div class="form-group">
            <label for="FirstName" class="col-sm-2 control-label">*@Intelledox.Produce.Resources.Strings.FirstName</label>
            <div class="col-sm-4">
                <input type="text" id="FirstName" name="FirstName" class="form-control" maxlength="50" value="@Model.Contact.FirstName" />
                @Html.ValidationMessage("FirstName")
            </div>
            <label for="Organisation" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Organisation</label>
            <div class="col-sm-4">
                <input type="text" id="Organisation" name="Organisation" class="form-control" maxlength="100" value="@Model.Contact.Organisation" />
            </div>
        </div>
        <div class="form-group">
            <label for="LastName" class="col-sm-2 control-label">*@Intelledox.Produce.Resources.Strings.LastName</label>
            <div class="col-sm-4">
                <input type="text" id="LastName" name="LastName" class="form-control" maxlength="50" value="@Model.Contact.LastName" />
                @Html.ValidationMessage("LastName")
            </div>
            <label for="PhoneNumber" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.PhoneNumber</label>
            <div class="col-sm-4">
                <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" maxlength="50" value="@Model.Contact.PhoneNumber" />
            </div>
        </div>
        <div class="form-group">
            <label for="EmailAddress" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Email</label>
            <div class="col-sm-4">
                <input type="email" id="EmailAddress" name="EmailAddress" class="form-control" maxlength="256" value="@Model.Contact.EmailAddress" />
            </div>
            <label for="FaxNumber" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.FaxNumber</label>
            <div class="col-sm-4">
                <input type="tel" id="FaxNumber" name="FaxNumber" class="form-control" maxlength="50" value="@Model.Contact.FaxNumber" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <h4>@Intelledox.Produce.Resources.Strings.StreetAddress</h4>
            </div>
            <div class="col-sm-6">
                <h4>@Intelledox.Produce.Resources.Strings.PostalAddress</h4>
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.Address1" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.AddressLine1</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.Address1" name="StreetAddress.Address1" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.Address1" />
            </div>
            <label for="PostalAddress.Address1" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.AddressLine1</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.Address1" name="PostalAddress.Address1" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.Address1" />
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.Address2" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.AddressLine2</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.Address2" name="StreetAddress.Address2" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.Address2" />
            </div>
            <label for="PostalAddress.Address2" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.AddressLine2</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.Address2" name="PostalAddress.Address2" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.Address2" />
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.Suburb" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.SuburbTownCity</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.Suburb" name="StreetAddress.Suburb" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.Suburb" />
            </div>
            <label for="PostalAddress.Suburb" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.SuburbTownCity</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.Suburb" name="PostalAddress.Suburb" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.Suburb" />
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.State" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.StateProvinceRegion</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.State" name="StreetAddress.State" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.State" />
            </div>
            <label for="PostalAddress.State" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.StateProvinceRegion</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.State" name="PostalAddress.State" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.State" />
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.Postcode" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.PostalZipCode</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.Postcode" name="StreetAddress.Postcode" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.Postcode" />
            </div>
            <label for="PostalAddress.Postcode" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.PostalZipCode</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.Postcode" name="PostalAddress.Postcode" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.Postcode" />
            </div>
        </div>
        <div class="form-group">
            <label for="StreetAddress.Country" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Country</label>
            <div class="col-sm-4">
                <input type="text" id="StreetAddress.Country" name="StreetAddress.Country" class="form-control" maxlength="50" value="@Model.Contact.StreetAddress.Country" />
            </div>
            <label for="PostalAddress.Country" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Country</label>
            <div class="col-sm-4">
                <input type="text" id="PostalAddress.Country" name="PostalAddress.Country" class="form-control" maxlength="50" value="@Model.Contact.PostalAddress.Country" />
            </div>
        </div>
        @foreach (var custom in Model.CustomFields)
        {
            Html.RenderPartial("_CustomFieldPartial", custom);
        }

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="Save" class="btn btn-primary btn-submit" value="@Intelledox.Produce.Resources.Strings.Save" />
                @if (Model.Contact.AddressId > 0)
                {
                <input type="submit" name="Delete" class="btn btn-default btn-del" value="@Intelledox.Produce.Resources.Strings.Delete" onclick="return confirm('@Intelledox.Produce.Resources.Strings.ConfirmDelete');" />
                }
            </div>
        </div>
    </form>
</div>