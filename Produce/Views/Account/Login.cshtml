@model Infiniti.MvcControllers.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutSubpage.cshtml";
}
<!-- Version @Intelledox.Produce.General.GetVersion -->
<form id="Form1" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
    <span id="lblBefore">@Html.Raw(Infiniti.MvcControllers.ApplicationSettings.ThemeLoginBefore)</span>
    <div id="divLogin" class="form-horizontal">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
        <div id="divLoginMessage">@ViewBag.Message</div>
        }
        <div id="tblLogin">
            <h3 class="login-title">@Intelledox.Produce.Resources.Strings.Login</h3>
            <div class="form-group">
                <label for="txtUsername" id="lblUsername" class="col-sm-3 control-label">@ViewBag.UsernameTitle</label>
                <div class="col-sm-9">
                    <input name="UserName" type="text" id="txtUsername" class="form-control" autofocus="autofocus" autocomplete="off" value="@Model.UserName" />
                    @Html.ValidationMessage("UserName")
                </div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="col-sm-3 control-label">@Intelledox.Produce.Resources.Strings.Password</label>
                <div class="col-sm-9">
                    <input name="Password" type="password" id="txtPassword" class="form-control" autocomplete="off" />
                </div>
            </div>
            <div class="pull-right">
                <a href="~/Account/ForgotPassword?returnURL=@ViewBag.ReturnUrl" class="btn btn-link" id="lnkForgotPassword">@Intelledox.Produce.Resources.Strings.ForgotPassword</a>
                <input type="submit" value="@Intelledox.Produce.Resources.Strings.Login" id="btnSignIn" class="btn btn-primary btn-submit" />
            </div>
        </div>
        <br /><br />
        @if (!string.IsNullOrEmpty(ViewBag.ConfirmationMessage))
        {
        <div id="divConfirmMessage">@ViewBag.ConfirmationMessage</div>
        }
    </div>
    <span id="lblAfter">@Html.Raw(Infiniti.MvcControllers.ApplicationSettings.ThemeLoginAfter)</span>
</form>
