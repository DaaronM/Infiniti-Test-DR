@using Intelledox.Produce
@{
    ViewBag.CurrentTab = MenuTab.Profile;
}
@Html.Partial("_SiteHeader")
<div class="container ix-header-body">
    <h1 class="page-header">
        @Intelledox.Produce.Resources.Strings.TwoFactorAuthenticationSetup
    </h1>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="bg-danger">@ViewBag.Message</p>
    }

    <form method="post" class="form-horizontal" autocomplete="off">
        @Html.AntiForgeryToken()

        @Html.Raw(Intelledox.Produce.Resources.Strings.TwoFactorAppInstall)

        <br />
        <img src="data:image/png;base64,@ViewBag.QRCode" alt="@ViewBag.Secret" />

        <p>
            @Intelledox.Produce.Resources.Strings.TwoFactorManualEntry @ViewBag.DisplaySecret
        </p>

        <input type="hidden" id="secret" name="secret" value="@ViewBag.Secret" />

        <p>
            @Intelledox.Produce.Resources.Strings.TwoFactorAppInstall2
        </p>

        <div class="form-group">
            <label for="code" class="col-sm-2 control-label">@Intelledox.Produce.Resources.Strings.Code</label>
            <div class="col-sm-10">
                <input type="text" id="code" name="code" class="form-control" maxlength="50" autocomplete="off" style="width:200px" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-submit">@Intelledox.Produce.Resources.Strings.TurnOn</button>
            </div>
        </div>
    </form>
</div>
